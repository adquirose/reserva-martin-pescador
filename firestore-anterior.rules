rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Solo usuarios autenticados pueden escribir, cualquiera puede leer hasta la fecha l√≠mite
      allow read: if request.time < timestamp.date(2026, 6, 28);
      allow write: if request.auth != null && request.time < timestamp.date(2026, 6, 28);
    }
  }
}